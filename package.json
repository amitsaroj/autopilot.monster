{
  "name": "autopilot-monster",
  "version": "2.0.0",
  "description": "AI Agents & Automation Marketplace - Node.js Microservices",
  "private": true,
  "scripts": {
    "install:all": "./install-all.sh",
    "start": "./start-all-services.sh",
    "stop": "./stop-all-services.sh",
    "clean": "npm run clean:services && npm run clean:frontend",
    "clean:services": "find services -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:frontend": "cd frontend && rm -rf .next 2>/dev/null || true",
    "logs": "tail -f logs/*.log",
    "health": "curl -s http://localhost:4000/health | jq",
    "docs": "open http://localhost:4000/api-docs",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "dev:gateway": "cd services/api-gateway-node && npm run dev",
    "dev:auth": "cd services/auth-service-node && npm run dev",
    "dev:user": "cd services/user-service-node && npm run dev",
    "dev:marketplace": "cd services/marketplace-service-node && npm run dev",
    "dev:cart": "cd services/cart-service-node && npm run dev",
    "dev:order": "cd services/order-service-node && npm run dev",
    "dev:vendor": "cd services/vendor-service-node && npm run dev",
    "dev:content": "cd services/content-service-node && npm run dev",
    "dev:admin": "cd services/admin-service-node && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:services": "npm run build:gateway && npm run build:auth && npm run build:user && npm run build:marketplace && npm run build:cart && npm run build:order && npm run build:vendor && npm run build:content && npm run build:admin",
    "build:gateway": "cd services/api-gateway-node && npm run build",
    "build:auth": "cd services/auth-service-node && npm run build",
    "build:user": "cd services/user-service-node && npm run build",
    "build:marketplace": "cd services/marketplace-service-node && npm run build",
    "build:cart": "cd services/cart-service-node && npm run build",
    "build:order": "cd services/order-service-node && npm run build",
    "build:vendor": "cd services/vendor-service-node && npm run build",
    "build:content": "cd services/content-service-node && npm run build",
    "build:admin": "cd services/admin-service-node && npm run build",
    "build:frontend": "cd frontend && npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "microservices",
    "fastify",
    "node.js",
    "typescript",
    "kafka",
    "mongodb",
    "redis",
    "api-gateway",
    "automation",
    "ai-agents"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/autopilot-monster"
  },
  "license": "MIT",
  "author": "Autopilot Monster Team"
}
